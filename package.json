{
  "name": "y0-task-manager",
  "version": "1.0.0",
  "description": "تطبيق إدارة المهام الذكي مع نظام التحفيز والنقاط - Smart Task Manager with Gamification",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && flutter run -d chrome --web-port=3000",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && flutter build web",
    "start": "npm run start:backend",
    "start:backend": "cd backend && npm start",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && flutter test",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "setup": "npm run setup:backend && npm run setup:frontend && npm run docker:up",
    "setup:backend": "cd backend && npm install && cp .env.example .env",
    "setup:frontend": "cd frontend && flutter pub get && flutter packages pub run build_runner build",
    "clean": "npm run clean:backend && npm run clean:frontend",
    "clean:backend": "cd backend && rm -rf node_modules package-lock.json",
    "clean:frontend": "cd frontend && flutter clean",
    "lint": "npm run lint:backend",
    "lint:backend": "cd backend && npm run lint",
    "format": "npm run format:frontend",
    "format:frontend": "cd frontend && flutter format .",
    "migrate": "cd backend && npm run migrate",
    "seed": "cd backend && npm run seed",
    "reset-db": "npm run docker:down && npm run docker:up && sleep 10 && npm run migrate && npm run seed"
  },
  "keywords": [
    "task-manager",
    "productivity",
    "flutter",
    "nodejs",
    "mysql",
    "gamification",
    "arabic",
    "rtl",
    "motivation",
    "xp-system",
    "achievements",
    "notifications",
    "responsive",
    "pwa"
  ],
  "author": {
    "name": "Y0 Development Team",
    "email": "dev@y0taskmanager.com",
    "url": "https://github.com/yourusername"
  },
  "contributors": [
    {
      "name": "Y0 Developer",
      "email": "developer@y0taskmanager.com"
    }
  ],
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/y0-task-manager.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/y0-task-manager/issues"
  },
  "homepage": "https://github.com/yourusername/y0-task-manager#readme",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/yourusername"
  }
}
